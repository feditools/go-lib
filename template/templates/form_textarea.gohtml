{{ define "form_textarea" -}}
{{ template "form_input_label" . }}
<textarea class="form-control{{ if .Validation}}{{ if .Validation.Valid}} is-valid{{ else }} is-invalid{{ end }}{{ end }}" id="{{ .ID }}" name="{{ .Name }}"{{ if .Disabled }} disabled{{ end }}{{ if .Required }} required{{ end }}></textarea>
{{- if .Validation}}
<div class="{{ if .Validation.Valid}}valid-feedback{{ else }}invalid-feedback{{ end }}">
  {{ .Validation.Response }}
</div>
{{- end }}
{{- end }}
